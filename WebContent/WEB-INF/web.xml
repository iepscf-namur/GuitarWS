<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
    	<servlet-name>UserAccountController</servlet-name>
    	<servlet-class>org.guitar.WS.Servlets.UserAccountController</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>UserAccountController</servlet-name>
    	<url-pattern>/login/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>org.guitar.WS.Servlets.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CatalogController</servlet-name>
        <servlet-class>org.guitar.WS.Servlets.CatalogController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatalogController</servlet-name>
        <url-pattern>/catalog/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RoleController</servlet-name>
        <servlet-class>org.guitar.WS.Servlets.RoleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoleController</servlet-name>
        <url-pattern>/roles/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SongController</servlet-name>
        <servlet-class>org.guitar.WS.Servlets.SongController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SongController</servlet-name>
        <url-pattern>/songs/*</url-pattern>
    </servlet-mapping>

	<!-- CORS FILTERS -->
		<!-- Enable -->

    <filter>
        <filter-name>SimpleCORSFilter</filter-name>
        <filter-class>org.guitar.WS.Utils.SimpleCORSFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>SimpleCORSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    	<!-- Restrict -->
    <filter>
        <filter-name>JWTFilter</filter-name>
        <filter-class>org.guitar.WS.Utils.JWTFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JWTFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	
</web-app>